@using EleWise.ELMA.BPM.Web.Common.Mvc.html
@using EleWise.ELMA.BPM.Web.Common.Models
@using EleWise.ELMA.Model.Types.Settings
@model EleWise.ELMA.MailSniffer.MailSnifferSettings

@using (Html.TableForm(v => v.ViewType(EleWise.ELMA.Model.Views.ViewType.Edit).Attributes(a => a.@class = "settings_table")))
{
    @Html.EditableProperty(m => m.NotifyUsers)
    @Html.EditableProperty(m => m.ExceptionUsers)
    @Html.EditableProperty(m => m.TrialDuration)
    @Html.EditableProperty(m => m.MonitorEmployeesOnProbation)
    @Html.Property(m => m.EmployeesOnProbation, a => a.ReadOnly = true)
    @Html.EditableProperty(m => m.MonitorEmployeesOnDismissal)
    @Html.Property(m => m.EmployeesOnDismissal, a => a.ReadOnly = true)
    @Html.EditableProperty(m => m.FilterList, a =>
                        {
                            a.ShowDescription = true;
                            a.TypeSettings = new StringSettings() { MultiLine = true };
                        })
    @Html.EditableProperty(m => m.BlockFilterList, a =>
                        {
                            a.ShowDescription = true;
                            a.TypeSettings = new StringSettings() { MultiLine = true };
                        })
}
